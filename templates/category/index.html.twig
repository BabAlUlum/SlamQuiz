{% extends 'base.html.twig' %}

{% block title %}{% trans %}Category index{% endtrans %}{% endblock %}

{% block body %}
    <h1>{% trans %}Category index{% endtrans %}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>{% trans %}Shortname{% endtrans %}</th>
                <th>{% trans %}Longname{% endtrans %}</th>
                <th>{% trans %}actions{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.shortname }}</td>
                <td>{{ category.longname }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('category_show', {'id': category.id}) }}"><i class="far fa-eye"></i>   {% trans %}show{% endtrans %}</a>
                    <a class="btn btn-primary" href="{{ path('category_edit', {'id': category.id}) }}"><i class="fa fa-pencil-square-o"></i>   {% trans %}edit{% endtrans %}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('category_new') }}"><i class='far fa-plus-square'></i>   {% trans %}Create new{% endtrans %}</a>
{% endblock %}